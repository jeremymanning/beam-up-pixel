<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/watch_face_preview"
        android:label="@string/watch_face_name"
        android:roundIcon="@drawable/watch_face_preview"
        android:theme="@android:style/Theme.DeviceDefault">

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <service
            android:name="com.example.beamupwatchface.BeamUpWatchFaceService"
            android:exported="true"
            android:label="@string/my_watch_face"
            android:directBootAware="true">

            <meta-data
                android:name="com.google.android.wearable.watchface.preview"
                android:resource="@drawable/watch_face_preview" />

            <intent-filter>
                <action android:name="androidx.wear.watchface.WatchFaceService" />
            </intent-filter>
        </service>


    </application>

</manifest>
