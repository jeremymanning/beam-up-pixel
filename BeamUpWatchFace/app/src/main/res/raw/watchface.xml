<!--
    Beam Up watch face with percentage-based positioning for multi-device support
-->
<WatchFace width="100%" height="100%">
  <Metadata key="CLOCK_TYPE" value="DIGITAL"/>
  <Metadata key="PREVIEW_TIME" value="10:08:32"/>
  <Scene backgroundColor="#ff000000">
    <DigitalClock x="0" y="0" width="100%" height="100%">
      <!-- Ambient mode version -->
      <TimeText format="hh:mm" hourFormat="SYNC_TO_DEVICE" align="CENTER" x="0" y="27.5%" width="100%" height="22.2%" alpha="0">
        <Variant mode="AMBIENT" target="alpha" value="255"/>
        <Font family="@font/imagine_font" size="26%" weight="THIN" slant="NORMAL" color="#ffffff"/>
      </TimeText>
    </DigitalClock>
    
    <!-- Individual digits for beam animation - using percentage units -->
    <!-- Hour tens digit with beam animation -->
    <PartText x="7.3%" y="27.5%" width="20%" height="22.2%" alpha="255">
      <Transform target="alpha" value="((([HOUR_0_23] == 9) || ([HOUR_0_23] == 19) || ([HOUR_0_23] == 23)) &amp;&amp; ([MINUTE] == 59)) &amp;&amp; ([SECOND] == 59) &amp;&amp; ([MILLISECOND] &gt;= 650) &amp;&amp; ([MILLISECOND] &lt; 1000) ? 0 : 255"/>
      <Text align="CENTER">
        <Font family="@font/imagine_font" size="26%" color="#ffffff">
          <Template>%s<Parameter expression="floor(([IS_24_HOUR_MODE]?[HOUR_0_23]:[HOUR_1_12])/10)"/></Template>
        </Font>
      </Text>
    </PartText>
    
    <!-- Hour ones digit with beam animation -->
    <PartText x="26.7%" y="27.5%" width="20%" height="22.2%" alpha="255">
      <Transform target="alpha" value="([MINUTE] == 59) &amp;&amp; ([SECOND] == 59) &amp;&amp; ([MILLISECOND] &gt;= 650) &amp;&amp; ([MILLISECOND] &lt; 1000) ? 0 : 255"/>
      <Text align="CENTER">
        <Font family="@font/imagine_font" size="26%" color="#ffffff">
          <Template>%s<Parameter expression="([IS_24_HOUR_MODE]?[HOUR_0_23]:[HOUR_1_12]) % 10"/></Template>
        </Font>
      </Text>
    </PartText>
    
    <!-- Colon separator -->
    <PartText x="46.4%" y="27.5%" width="6.7%" height="22.2%">
      <Text align="CENTER">
        <Font family="@font/imagine_font" size="26%" color="#ffffff">
          <Template>:</Template>
        </Font>
      </Text>
    </PartText>
    
    <!-- Minute tens digit with beam animation -->
    <PartText x="52.7%" y="27.5%" width="20%" height="22.2%" alpha="255">
      <Transform target="alpha" value="(([MINUTE] % 10) == 9) &amp;&amp; ([SECOND] == 59) &amp;&amp; ([MILLISECOND] &gt;= 650) &amp;&amp; ([MILLISECOND] &lt; 1000) ? 0 : 255"/>
      <Text align="CENTER">
        <Font family="@font/imagine_font" size="26%" color="#ffffff">
          <Template>%s<Parameter expression="floor([MINUTE] / 10)"/></Template>
        </Font>
      </Text>
    </PartText>
    
    <!-- Minute ones digit with beam animation -->
    <PartText x="72.2%" y="27.5%" width="20%" height="22.2%" alpha="255">
      <Transform target="alpha" value="([SECOND] == 59) &amp;&amp; ([MILLISECOND] &gt;= 650) &amp;&amp; ([MILLISECOND] &lt; 1000) ? 0 : 255"/>
      <Text align="CENTER">
        <Font family="@font/imagine_font" size="26%" color="#ffffff">
          <Template>%s<Parameter expression="[MINUTE] % 10"/></Template>
        </Font>
      </Text>
    </PartText>

    <!-- Beam animations - using percentage units -->
    <!-- Hour tens beam -->
    <Group x="7.6%" y="0" width="16.2%" height="45.3%" name="hour_tens_beam">
      <PartDraw x="0" y="0" width="100%" height="100%">
        <Rectangle x="0" y="0" width="100%">
          <Fill color="#ffffff"/>
          <!-- Four phase animation with percentage height -->
          <Transform target="height" value="((([HOUR_0_23] == 9) || ([HOUR_0_23] == 19) || ([HOUR_0_23] == 23)) &amp;&amp; ([MINUTE] == 59) &amp;&amp; ([SECOND] == 59)) ? (([MILLISECOND] &lt; 475) ? 0 : ([MILLISECOND] &lt; 650) ? ((([MILLISECOND] - 475) / 175.0) * 100) : ([MILLISECOND] &lt; 825) ? (100 * (1 - (([MILLISECOND] - 650) / 175.0))) : ([MILLISECOND] &lt; 1000) ? ((([MILLISECOND] - 825) / 175.0) * 100) : 100) : ((([HOUR_0_23] == 10) || ([HOUR_0_23] == 20) || ([HOUR_0_23] == 0)) &amp;&amp; ([MINUTE] == 0) &amp;&amp; ([SECOND] == 0) &amp;&amp; ([MILLISECOND] &lt; 175)) ? (100 * (1 - ([MILLISECOND] / 175.0))) : 0" />
        </Rectangle>
      </PartDraw>
    </Group>
    
    <!-- Hour ones beam -->
    <Group x="26.9%" y="0" width="16.2%" height="45.3%" name="hour_ones_beam">
      <PartDraw x="0" y="0" width="100%" height="100%">
        <Rectangle x="0" y="0" width="100%">
          <Fill color="#ffffff"/>
          <Transform target="height" value="([MINUTE] == 59) &amp;&amp; ([SECOND] == 59) ? (([MILLISECOND] &lt; 475) ? 0 : ([MILLISECOND] &lt; 650) ? ((([MILLISECOND] - 475) / 175.0) * 100) : ([MILLISECOND] &lt; 825) ? (100 * (1 - (([MILLISECOND] - 650) / 175.0))) : ([MILLISECOND] &lt; 1000) ? ((([MILLISECOND] - 825) / 175.0) * 100) : 100) : ([MINUTE] == 0) &amp;&amp; ([SECOND] == 0) &amp;&amp; ([MILLISECOND] &lt; 175) ? (100 * (1 - ([MILLISECOND] / 175.0))) : 0" />
        </Rectangle>
      </PartDraw>
    </Group>
    
    <!-- Minute tens beam -->
    <Group x="52.9%" y="0" width="16.2%" height="45.3%" name="minute_tens_beam">
      <PartDraw x="0" y="0" width="100%" height="100%">
        <Rectangle x="0" y="0" width="100%">
          <Fill color="#ffffff"/>
          <Transform target="height" value="(([MINUTE] % 10) == 9) &amp;&amp; ([SECOND] == 59) ? (([MILLISECOND] &lt; 475) ? 0 : ([MILLISECOND] &lt; 650) ? ((([MILLISECOND] - 475) / 175.0) * 100) : ([MILLISECOND] &lt; 825) ? (100 * (1 - (([MILLISECOND] - 650) / 175.0))) : ([MILLISECOND] &lt; 1000) ? ((([MILLISECOND] - 825) / 175.0) * 100) : 100) : (([MINUTE] % 10) == 0) &amp;&amp; ([SECOND] == 0) &amp;&amp; ([MILLISECOND] &lt; 175) ? (100 * (1 - ([MILLISECOND] / 175.0))) : 0" />
        </Rectangle>
      </PartDraw>
    </Group>
    
    <!-- Minute ones beam -->
    <Group x="72.4%" y="0" width="16.2%" height="45.3%" name="minute_ones_beam">
      <PartDraw x="0" y="0" width="100%" height="100%">
        <Rectangle x="0" y="0" width="100%">
          <Fill color="#ffffff"/>
          <Transform target="height" value="([SECOND] == 59) ? (([MILLISECOND] &lt; 475) ? 0 : ([MILLISECOND] &lt; 650) ? ((([MILLISECOND] - 475) / 175.0) * 100) : ([MILLISECOND] &lt; 825) ? (100 * (1 - (([MILLISECOND] - 650) / 175.0))) : ([MILLISECOND] &lt; 1000) ? ((([MILLISECOND] - 825) / 175.0) * 100) : 100) : ([SECOND] == 0) ? (([MILLISECOND] &lt; 175) ? (100 * (1 - ([MILLISECOND] / 175.0))) : 0) : 0" />
        </Rectangle>
      </PartDraw>
    </Group>
    
    <!-- Date display -->
    <Group x="0" y="0" width="100%" height="100%" name="date_display">
      <PartText x="0" y="54.7%" width="100%" height="11.1%">
        <Variant mode="AMBIENT" target="alpha" value="0"/>
        <Text align="CENTER">
          <Font family="@font/imagine_font" size="16%" color="#ffffffff">
            <Template>%s %02d<Parameter expression="[DAY_OF_WEEK_S]"></Parameter><Parameter expression="[DAY]"></Parameter></Template>
          </Font>
        </Text>
      </PartText>
    </Group>
    
    <!-- Progress bar for seconds -->
    <Group x="0" y="48.9%" width="100%" height="2.2%" name="progress_bar_group">
      <PartDraw x="0" y="0" width="100%" height="100%">
        <Rectangle x="0" y="0" height="100%">
          <Fill color="#FFFFFF" />
          <Transform target="width" value="([SECOND] &lt; 59) ? ([SECOND] * 1.667) : ([MILLISECOND] &lt; 650) ? 100 : (100 * (1 - (([MILLISECOND] - 650) / 350.0)))" />
        </Rectangle>
      </PartDraw>
      <Variant mode="AMBIENT" target="alpha" value="0"/>
    </Group>
  </Scene>
</WatchFace>